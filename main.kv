<WindowManager>:
    MainWindow:
    SecondWindow:
    ThirdWindow:

<MainWindow>:
    name: "main"
    MDToolbar:
        pos_hint: {'center_x': .5, 'center_y': .96}
        title: 'Barra de ferramentas'
        specific_text_color: 'white'
        right_action_items: [["dots-vertical", lambda x: x]]
    MDIconButton:
        icon: 'android'
        user_font_size: '90sp'
        md_bg_color: 0, .6, 0, 1
        pos_hint: {'center_x': .28, 'center_y': .76}
    MDLabel:
        text: 'KevBoyz Inc(c)'
        font_size: 50
        pos_hint: {'center_x': .88, 'center_y': .76}
    MDFillRoundFlatButton:
        size_hint_x: .5
        text: "Iniciar Câmera"
        pos_hint: {'center_x': .5, 'center_y': .5}
        font_size: 25
        theme_text_color: 'Custom'
        text_color: 1, 1, 0.99, 1
        on_release:
            app.root.current = "third"
            root.manager.transition.direction = "left"
    MDFillRoundFlatButton:
        text: 'Opções'
        size_hint_x: .5
        font_size: 25
        theme_text_color: 'Custom'
        text_color: 1, 1, 0.99, 1
        pos_hint: {'center_x': .5, 'center_y': .4}
        on_release:
            app.root.current = "second"
            root.manager.transition.direction = "right"
    MDFillRoundFlatButton:
        text: 'Como usar'
        size_hint_x: .5
        font_size: 25
        theme_text_color: 'Custom'
        text_color: 1, 1, 0.99, 1
        pos_hint: {'center_x': .5, 'center_y': .3}
        on_press: root.open_dialog()
    MDBottomAppBar:
        MDToolbar:
            title: 'Acesse o codigo fonte! Programado em Python com kivymd e opencv'
            specific_text_color: 'white'
            icon: "github"
            type: "bottom"
            mode: "end"
            icon_color: 1, 1, 1, 1
            on_action_button: root.hyperlink('https://github.com/KevBoyz/Sensor-de-movimento-Android')

<SecondWindow>:
    name: "second"
    MDToolbar:
        pos_hint: {'center_x': .5, 'center_y': .96}
        title: 'Barra de ferramentas'
        specific_text_color: 'white'
        right_action_items: [["dots-vertical", lambda x: x]]
    MDIconButton:
        icon: 'android'
        user_font_size: '90sp'
        md_bg_color: 0, .6, 0, 1
        pos_hint: {'center_x': .28, 'center_y': .76}
    MDLabel:
        text: 'Menu de Opções'
        font_size: 50
        pos_hint: {'center_x': .88, 'center_y': .76}
    MDFillRoundFlatButton:
        size_hint_x: .5
        text: "Habilitar Alarme"
        pos_hint: {'center_x': .5, 'center_y': .5}
        font_size: 25
        theme_text_color: 'Custom'
        text_color: 1, 1, 0.99, 1
    MDFillRoundFlatButton:
        text: 'Alterar delay de captura'
        size_hint_x: .5
        font_size: 25
        theme_text_color: 'Custom'
        text_color: 1, 1, 0.99, 1
        pos_hint: {'center_x': .5, 'center_y': .4}
    MDFillRoundFlatButton:
        text: "Voltar"
        size_hint_x: .5
        font_size: 25
        theme_text_color: 'Custom'
        text_color: 1, 1, 0.99, 1
        pos_hint: {'center_x': .5, 'center_y': .3}
        on_release:
            app.root.current = "main"
            root.manager.transition.direction = "left"
    MDBottomAppBar:
        MDToolbar:
            title: 'Acesse o codigo fonte! Programado em Python com kivymd e opencv'
            specific_text_color: 'white'
            icon: "github"
            type: "bottom"
            mode: "end"
            icon_color: 1, 1, 1, 1
            on_action_button: root.hyperlink('https://github.com/KevBoyz/Sensor-de-movimento-Android')



<HelpContent>
    size_hint_y: None
    type: 'custom'
    orientation: 'vertical'
    height: "190dp"
    MDLabel:
        text: 'O intuito deste app é transformar seu mobile em uma câmera de segurança sensivel a movimento. O uso é bem simples: Inicie a câmera pelo app e deixe o dispositivo totalmente parado, em alguns instantes a detecção de movimento será inicializada.'
    MDLabel:
        text: 'Sempre que um novo movimento for detectado será salva uma foto, servindo como provas de um invasor. A imagem ficará salva na galeria em um album com o nome do app. Tambem é possivel disparar um alarme em caso de detecção, caso queira ative em configurações.'

<ThirdWindow>
    name: "third"
    orientation:  'vertical'
    BoxLayout:
        Button:
            text: 'lol'
            on_release:
                app.root.current = "main"
                root.manager.transition.direction = "right"



